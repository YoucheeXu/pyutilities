<Window Title="FIR Designer" Height="1200" Width="540">
	<Frame text="Time Domain" layout="pack" pack='{"side":"top","fill":"both","expand":True,"padx":10,"pady":(10,5)}'>
		<MatPlot text="Filter Response in Time Domain" xLabel="Time (s)" yLabel="" layout="pack" pack='{"side":"left","fill":"both","expand":True,"padx":(10,5),"pady":5}'/>
		<MatPlot text="Window Function in Time Domain" xLabel="Time (s)" yLabel="" layout="pack" pack='{"side":"left","fill":"both","expand":True,"padx":(5,10),"pady":5}'/>
	</Frame>
	<Frame text="Frequency Domain" layout ="pack" pack='{"side":"top","fill":"both","expand":True,"padx":10,"pady":(5,5)}'>
		<MatPlot text="Filter Frequency Response" xLabel="Frequency (Hz)" yLabel="" layout="pack" pack='{"side":"left","fill":"both","expand":True,"padx":(10,5),"pady":5}'/>
		<MatPlot text="Window Function Frequency Response" xLabel="Frequency (Hz)" yLabel="" layout="pack" pack='{"side":"left","fill":"both","expand":True,"padx":(5,10),"pady":(5,5)}'/>
	</Frame>
	<LabelFrame text="Parameters" layout="pack" pack='{"side":"left","fill":"both","expand":True,"padx":(10,5),"pady":(5,10)}'>
		<Label text="Sample Time(s):" layout="grid" grid="{'row':0,'column':0}"/>
		<Entry text="Sample Time" width="15" layout="grid" grid="{'row':0,'column':1}"/>
		<Label text="Filter Length:" layout="grid" grid="{'row':1,'column':0}"/>
		<Entry text="Filter Length" width="15" layout="grid" grid="{'row':1,'column':1}"/>
		<Label text="Shift Samples:" layout="grid" grid="{'row':2,'column':0}"/>
		<Entry text="Shift Samples" width="15" layout="grid" grid="{'row':2,'column':1}"/>
		<Label text="Low Frequency(Hz):" layout="grid" grid="{'row':0,'column':2}"/>
		<Entry text="Low Frequency" width="15" layout="grid" grid="{'row':0,'column':3}"/>
		<Label text="High Frequency(Hz):" layout="grid" grid="{'row':1,'column':2}"/>
		<Entry text="High Frequency" width="15" layout="grid" grid="{'row':1,'column':3}"/>
		<Label text="Window Function:" layout="grid" grid="{'row':2,'column':2}"/>
		<Combobox text="Window Type" values='["Rectangular", "Triangular", "Welch", "Sine", "Hann", "Hamming", "Blackman", "Nuttall", "BlackmanNuttall", "BlackmanHarris", "FlatTop"]' state='readonly' default="5" width="15" layout="grid" grid="{'row':2,'column':3}"/>
		<Label text="Filter Type" layout="grid" grid="{'row':0,'column':4}"/>
		<Radiobutton title="Low Pass"  text="Filter Type" value="0" layout="grid" grid="{'row':1,'column':4}"/>
		<Radiobutton title="High Pass" text="Filter Type" value="1" layout="grid" grid="{'row':1,'column':5}"/>
		<Radiobutton title="Band Pass" text="Filter Type" value="2" layout="grid" grid="{'row':2,'column':4}"/>
		<Radiobutton title="Band Stop" text="Filter Type" value="3" layout="grid" grid="{'row':2,'column':5}"/>
		<Label text="Response Plot:" layout="grid" grid="{'row':0,'column':6}"/>
		<Radiobutton title="Impulse" text="Response Plot" value="0" layout="grid" grid="{'row':0,'column':7}"/>
		<Radiobutton title="Step" text="Response Plot" value="1" layout="grid" grid="{'row':1,'column':7}"/>
		<Label text="Display:" layout="grid" grid="{'row':2,'column':6}"/>
		<Combobox text="Display Type" values='["Both", "Raw Only", "Win Only"]' state='readonly' default="0" width="15" layout="grid" grid="{'row':2,'column':7}"/>
	</LabelFrame>
	<Button text="Design Filter" layout="pack" pack='{"side":"left","fill":"both","expand":True,"padx":(5,10),"pady":(5,10)}'/>
</Window>
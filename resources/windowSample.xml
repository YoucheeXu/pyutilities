<Window Title="Python图形用户界面样例" Width="400" Height="300">
	<Menu DockPanel.Dock="Top" text="Menubar">
		<MenuItem Header="File" options="{'underline':0}">
			<MenuItem id="meuNew" Command="New" options="{'accelerator':'Ctrl+N','underline':0}"/>
			<Separator />
			<MenuItem Command="Exit" options="{'accelerator':'Ctrl+E','underline':0}"/>
		</MenuItem>
		<MenuItem Header="Message Box">
			<MenuItem id="meuShowInfoBox" Command="Info Box" options="{'accelerator':'Ctrl+I','underline':0}"/>
			<MenuItem Command="Warn Box" options="{'accelerator':'Ctrl+W','underline':0}"/>
			<MenuItem Command="Error Box" options="{'accelerator':'Ctrl+L','underline':0}"/>
			<MenuItem Command="Choice Box" options="{'accelerator':'Ctrl+K','underline':0}"/>
		</MenuItem>		
		<MenuItem Header="Help">
			<MenuItem Command="About"/>
		</MenuItem>
	</Menu>

	<Notebook text="Notebook" layout="pack" pack="{'expand':1,'fill':'both'}">
		<Tab text="第一页">
			<LabelFrame text="控件示范区1" layout="grid" grid="{'row':0,'column':0,'padx':8,'pady':4}" childOpt="{'padx':3,'pady':1}">
				<Label text="输入文字:" layout="grid" grid="{'row':0,'column':0,'sticky':'W'}"/>
				<Entry text="name" tooltip="这是一个Entry" options="{'width':12}" layout="grid" grid="{'row':1,'column':0,'sticky':'W'}"/>
				<Button text="点击之后&#xA;按钮失效" tooltip="这是一个Button" options="{'width':10}" layout="grid" grid="{'row':1,'column':2,'rowspan':2,'ipady':7}"/>
				<Label text="请选择一本书:" layout="grid" grid="{'row':0,'column':1,'sticky':'W'}"/>
				<Combobox text="bookChosen" default="0" tooltip="这是一个Combobox" options="{'values':['平凡的世界','亲爱的安德烈','看见','白夜行'],'state':'readonly','width':12}" layout="grid" grid="{'row':1,'column':1}"/>
				<Spinbox text="blankSpin" tooltip="这是一个Spinbox" options="{'from_':10,'to':25,'width':5,'bd':8}" layout="grid" grid="{'row':2,'column':0}"/>
				<Spinbox text="bookSpin" tooltip="这是一个Spinbox" options="{'values':('Python3入门', 'C语言','C++', 'Java', 'OpenCV'),'width':13,'bd':3}" layout="grid" grid="{'row':2,'column':1,'sticky':'W'}"/>
				<ScrolledText text="scrolledtext" tooltip="这是一个ScrolledText" options="{'width':30,'height':5,'wrap':'word'}" layout="grid" grid="{'row':3,'column':0,'columnspan':3,'sticky':'WE'}"/>
			</LabelFrame>
		</Tab>
		<Tab text="第二页">
			<LabelFrame text="控件示范区2" layout="grid" grid="{'row':0,'column':0,'padx':8,'pady':4}">
				<Checkbutton text="失效选项" var="varChkDis" select="True" options="{'state':'disabled'}" layout="grid" grid="{'row':0,'column':0,'sticky':'W'}"/>
				<Checkbutton text="遵从内心" var="varChkUne" select="False" layout="grid" grid="{'row':0,'column':1,'sticky':'W'}"/>
				<Checkbutton text="屈于现实" var="varChkEna" select="False" layout="grid" grid="{'row':0,'column':2,'sticky':'W'}"/>
				<Radiobutton text="富强民主" var="varRadSel" value="0" layout="grid" grid="{'row':6,'column':0,'sticky':'W','columnspan':3}"/>
				<Radiobutton text="文明和谐" var="varRadSel" value="1" layout="grid" grid="{'row':6,'column':1,'sticky':'W','columnspan':3}"/>
				<Radiobutton text="自由平等" var="varRadSel" value="2" layout="grid" grid="{'row':6,'column':2,'sticky':'W','columnspan':3}"/>
				<Radiobutton text="公正法治" var="varRadSel" value="3" layout="grid" grid="{'row':6,'column':3,'sticky':'W','columnspan':3}"/>
				<Radiobutton text="爱国敬业" var="varRadSel" value="4" layout="grid" grid="{'row':7,'column':0,'sticky':'W','columnspan':3}"/>
				<Radiobutton text="诚信友善" var="varRadSel" value="5" layout="grid" grid="{'row':7,'column':1,'sticky':'W','columnspan':3}"/>
				<Style text="BW.TLabel" options="{'font':('Times', '10','bold')}"/>
				<Label text="   社会主义核心价值观" options="{'style':'BW.TLabel'}" layout="grid" grid="{'row':7,'column':2,'sticky':'EW','columnspan':2}"/>
				<LabelFrame text=" 嵌套区域 " layout="grid" grid="{'row':8,'column':0,'columnspan':4}" childOpt="{'padx':8,'pady':4}">
					<Label text="你才25岁，你可以成为任何你想成为的人。" layout="grid" grid="{'row':0,'column':0}"/>
					<Label text="不要在乎一城一池的得失，要执着。" layout="grid" grid="{'row':1,'column':0,'sticky':'W'}"/>
				</LabelFrame>
			</LabelFrame>
		</Tab>
		<Tab text="第三页">
			<Frame text="tab3" options="{'bg':'#AFEEEE'}" layout="pack" pack="{}">
                <Listbox id="lstHaa" layout="pack" pack="{'side': 'top'}"/>
                <Button id="btnHaa" text="+" layout="pack" pack="{'side': 'bottom'}"/>
			</Frame>
		</Tab>
		<Tab text="滚动条测试">
            <LabelFrame text="Left Test Area" layout="pack" pack="{'side':'left', 'expand':1,'fill':'both'}">
                <Frame id="frmLeftControlArea" layout="pack" pack="{'side':'top'}">
                    <Button id="btnLeftVAdd" text="+V" layout="grid" grid="{'row':0,'column':0}"/>
                    <Button id="btnLeftVSub" text="-V" layout="grid" grid="{'row':0,'column':1}"/>
                    <Button id="btnLeftHAdd" text="+H" layout="grid" grid="{'row':1,'column':0}"/>
                    <Button id="btnLeftHSub" text="-H" layout="grid" grid="{'row':1,'column':1}"/>
                </Frame>
                <ScrollableFrame id="frmLeftContentArea" Width="150" Height="400" layout="pack" pack="{'side':'bottom'}"/>
            </LabelFrame>
            <LabelFrame text="Right Test Area" layout="pack" pack="{'side':'right','expand':1,'fill':'both'}">
                <Frame id="frmRightControlArea" layout="pack" pack="{'side':'top'}">
                    <Button id="btnRightVAdd" text="+V" layout="grid" grid="{'row':0,'column':0}"/>
                    <Button id="btnRightVSub" text="-V" layout="grid" grid="{'row':0,'column':1}"/>
                    <Button id="btnRightHAdd" text="+H" layout="grid" grid="{'row':1,'column':0}"/>
                    <Button id="btnRightHSub" text="-H" layout="grid" grid="{'row':1,'column':1}"/>
                </Frame>
                <ScrollableFrame id="frmRightContentArea" Width="150" Height="400" layout="pack" pack="{'side':'bottom'}"/>
            </LabelFrame>
		</Tab>
		<Tab text="Five">
			<Frame text="tab5" options="{'bg':'#AFEEEE'}" layout="pack" pack="{}">
				<Canvas text="Canvas1" options="{'width':162,'height':95,'highlightthickness':0,'bg':'#FFFF00'}" layout="grid" grid="{'row':0,'column':0}"/>
				<Canvas text="Canvas2" options="{'width':162,'height':95,'highlightthickness':0,'bg':'#FFFF00'}" layout="grid" grid="{'row':1,'column':1}"/>
			</Frame>
		</Tab>
	</Notebook>
    <Dialog id="dlgHourDetail" text="项目详情" Width="400" Height="550">
    	<Label id="lblFatherItemDetail" text="" layout="pack" pack="{'pady':4}"/>
        <Frame id="frmItemDetail1" layout="pack" pack="{'pady':4}">
            <ImageButton id="btnImageHourDetail" image="CircleFlagsUsBetsyRoss.png" options="{'height':60, 'width':60}" layout="grid" grid="{'row':0,'column':0}"/>"
            <Label id="lblInfoHourDetail" text="" options="{'width':40}" layout="grid" grid="{'row':0,'column':1,'columnspan':2,'sticky':'w'}"/>
            <Label id="lblSumHourDetail" text="0" options="{'justify':'center'}" layout="grid" grid="{'row':0,'column':3,'sticky':'e'}"/>
            <Label id="lblWholeHourDetail" text="0" options="{'justify':'center'}" layout="grid" grid="{'row':1,'column':0}"/>
            <Label id="lblAvrgHourDetail" text="0" options="{'justify':'center'}" layout="grid" grid="{'row':1,'column':1}"/>
            <Label id="lblRecentHourDetail" text="0" options="{'justify':'center'}" layout="grid" grid="{'row':1,'column':2}"/>
            <Label id="lblRestHourDetail" text="0" options="{'justify':'center'}" layout="grid" grid="{'row':1,'column':3}"/>
            <Button id="btnRecordHourDetail" text="+记录时间" options="{'width':50}" layout="grid" grid="{'row':5,'column':0, 'columnspan':4}"/>
        </Frame>
        <Frame id="frmItemDetail2" layout="pack" pack="{'pady':4}">
            <ImagePanel id="imgClockItemDetail" text="clock" image="VaadinAlarm.png" options="{'width':20, 'height': 20}" layout="grid" grid="{'row':0,'column':0,'sticky':'W'}"/>
			<Label id="lblClockItemDetail" text="定时提醒" options="{'width':20}" layout="grid" grid="{'row':0,'column':1,'sticky':'W'}"/>
			<Label id="lblSelClockItemDetail" text="选择定时提醒" options="{'width':20}" layout="grid" grid="{'row':0,'column':2}"/>
			<ImagePanel id="imgScheduleItemDetail" text="schedule" image="calendar.png" options="{'width':20, 'height': 20}" layout="grid" grid="{'row':1,'column':0,'sticky':'W'}"/>
			<Label id="lblScheduleItemDetail" text="时间投入计划" options="{'width':20}" layout="grid" grid="{'row':1,'column':1,'sticky':'W'}"/>
			<Label id="lblSelScheduleItemDetail" text="选择时间投入计划" options="{'width':20}" layout="grid" grid="{'row':1,'column':2}"/>
        </Frame>
        <Frame id="frmAddChild" layout="pack" pack="{'pady':4}">
            <ImagePanel id="imgChildren" image="gift.png" options="{'height':20, 'width':20}" layout="grid" grid="{'row':0,'column':0}"></ImagePanel>
            <Label id="lblTotalChildren" text="共0个子项目" options="{'width':40}" layout="grid" grid="{'row':0,'column':1, 'sticky':'w'}"/>
            <Button id="btnAddChild" text="+添加" options="{'width':10}" layout="grid" grid="{'row':0,'column':2, 'sticky':'e'}"/>
        </Frame>
        <Frame id="frmSubItmes" layout="pack" pack="{'pady':4}"/>
		<Notebook id="ntbStatisticsHour" layout="pack" pack="{'expand':1,'fill':'both'}">
        	<Tab id="tabEveryDayHour" text="每日投入">
                <MatPlot id="pltEveryDayHour" text="" size="(400,180)" xLabel="" yLabel="" layout="pack" pack="{'pady':2}"/>
        		<Label id="lblDaySum" text="今日共投入0小时" options="{'width':20}" layout="pack" pack="{'pady':2}"/>
			</Tab>
			<Tab id="tabEveryWeekHour" text="每周投入">
				<Label id="lblWeekSum" text="本周共投入0小时" options="{'width':20}" layout="pack" pack="{'pady':4}"/>
			</Tab>
			<Tab id="tabEveryMonthHour" text="每月投入">
				<Label id="lblMonthSum" text="本月共投入0小时" options="{'width':20}" layout="pack" pack="{'pady':4}"/>
			</Tab>
			<Tab id="tabEveryYearHour" text="每年投入">
				<Label id="lblYearSum" text="本年共投入0小时" options="{'width':20}" layout="pack" pack="{'pady':4}"/>
			</Tab>
		</Notebook>
    </Dialog>
</Window>